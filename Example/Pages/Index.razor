@page "/"
@using Example.Pages.SharedComponents

<PageTitle>ToDo-Example</PageTitle>

<AuthorizeView>
    <Authorized>
        <MudContainer MaxWidth="MaxWidth.Medium">
            <MudStack Spacing="3">
                <MudPaper Class="pa-4">
                    <MudStack Row="true" Justify="Justify.SpaceBetween">
                        <MudText Typo="Typo.h4">Todo App</MudText>
                        <MudButton StartIcon="@Icons.Material.Filled.BatchPrediction" 
                                  Color="Color.Primary" 
                                  Variant="Variant.Filled"
                                  Href="/batch-demo">
                            Batch Demo
                        </MudButton>
                    </MudStack>
                </MudPaper>
                <TodoList />
            </MudStack>
        </MudContainer>
    </Authorized>
    <NotAuthorized>
        <RedirectTo To="/login" />
    </NotAuthorized>
</AuthorizeView>